__tex
{
    tex texture2 = texture2.jpg _out
    tex texture = texture.jpg
}

__main
{
    vec3 one = vec3(1,1,1)
    vec2 zero = vec2(0,0)

    vec3 result = vec3(0,0,0)
    vec2 uvOffset = vec2(-0.001,0)

    vec3 multiplier = vec3(0,0,0)
    multiplier = multiplier + times

    multiplier = one / multiplier

    _cycle
    {
        vec3 col = sample(texture,uv)
        col = col * multiplier

        result = result + col

        uv = uv + uvOffset

        times = times - one

        con (times.x_!=_zero.x) cycle out
        _out
        {
            jmp end
        }
    }

    _end

    out result
}